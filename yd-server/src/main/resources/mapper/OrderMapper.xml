<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yundin.mapper.OrderMapper">

    <select id="pageQuery" resultType="com.yundin.entity.Orders">
        select * from orders
        <where>
            <if test="phone!=null">
                and phone like concat('%',#{phone},'%')
            </if>
            <if test="number!=null">
                and number=#{number}
            </if>
            <if test="status!=null">
                and status = #{status}
            </if>
            <if test="endTime!=null">
                and #{endTime}>=order_time
            </if>
            <if test="beginTime!=null">
                and order_time>=#{beginTime}
            </if>
        </where>
    </select>
</mapper>